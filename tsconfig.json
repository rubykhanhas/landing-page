{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        /*  */
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "~/*": ["./*"]
        }
    },
    "include": ["./src"]
}
